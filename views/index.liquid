    <body>
        <div class="container-md">
            <form action="/weatherForcast" method="GET">
            <fieldset>
                <legend>What's the weather?</legend>
        <label class="form-label"> Zip Code: </label>
        <input 
            type="text" 
            name="zip" 
            placeholder="enter zip"
            class="form-control">
        </fieldset>
        <input 
        type="submit" 
        class="btn btn-dark"
        value="Check Weather">        

    </form>       
